<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Pedido -->
        <TextView
            android:text="@string/detalle_pedido_label_pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:labelFor="@id/spinnerPedido" />

        <Spinner
            android:id="@+id/spinnerPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp" />

        <!-- Producto -->
        <TextView
            android:text="@string/detalle_pedido_label_producto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:labelFor="@id/spinnerProducto" />

        <Spinner
            android:id="@+id/spinnerProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp" />

        <!-- Cantidad -->
        <TextView
            android:text="@string/detalle_pedido_label_cantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:labelFor="@id/editTextCantidad" />

        <EditText
            android:id="@+id/editTextCantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:minHeight="48dp"
            android:hint="@string/detalle_pedido_editar_hint_cantidad" />

        <!-- Precio unitario -->
        <TextView
            android:text="@string/detalle_pedido_label_precio_unitario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp" />

        <TextView
            android:id="@+id/textViewPrecioUnitario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detalle_pedido_vacio"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <!-- Subtotal -->
        <TextView
            android:text="@string/detalle_pedido_label_subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewSubtotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detalle_pedido_vacio"
            android:textSize="16sp"
            android:paddingBottom="16dp" />

        <!-- BotÃ³n Guardar -->
        <Button
            android:id="@+id/btnGuardarDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detalle_pedido_btn_guardar" />
    </LinearLayout>
</ScrollView>
