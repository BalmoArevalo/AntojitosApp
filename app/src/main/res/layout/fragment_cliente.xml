<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cliente_title"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btnCrearCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cliente_btn_crear"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnConsultarCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cliente_btn_consultar"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnEditarCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cliente_btn_editar"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnEliminarCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cliente_btn_eliminar"
        android:layout_marginBottom="16dp"/>

</LinearLayout>