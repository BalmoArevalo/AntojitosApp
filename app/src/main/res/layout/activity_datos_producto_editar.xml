<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_editar_datos_producto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:id="@+id/text_editar_datos_producto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar Datos Producto"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp" />

        <!-- Spinner de sucursales activas -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sucursal:"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            android:minHeight="48dp" />

        <Spinner
            android:id="@+id/spinnerSucursal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp" />

        <!-- Spinner de productos activos -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Producto:"
            android:layout_marginTop="12dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp" />

        <!-- Botón para cargar datos -->
        <Button
            android:id="@+id/btnBuscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buscar"
            android:layout_marginTop="16dp" />

        <!-- Precio -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio (USD):"
            android:layout_marginTop="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:minHeight="48dp" />

        <!-- Stock -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stock:"
            android:layout_marginTop="12dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editStock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:minHeight="48dp" />

        <!-- Disponible -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disponible:"
            android:layout_marginTop="12dp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/switchDisponible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:minHeight="48dp" />

        <!-- Botones de acción -->
        <Button
            android:id="@+id/btnActualizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar cambios"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/btnLimpiar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Limpiar"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</ScrollView>