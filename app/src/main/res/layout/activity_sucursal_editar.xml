<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sucursal_editar_titulo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sucursal_editar_label_sucursal"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerSucursal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/btnBuscarSucursal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_buscar"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/editNombreSucursal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/sucursal_editar_label_nombre"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/editTelefonoSucursal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/sucursal_editar_label_telefono"
            android:inputType="phone"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/editDireccionSucursal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/sucursal_editar_label_direccion"
            android:minHeight="48dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sucursal_editar_label_departamento"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <Spinner
            android:id="@+id/spinnerDepartamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sucursal_editar_label_municipio"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <Spinner
            android:id="@+id/spinnerMunicipio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:minHeight="48dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sucursal_editar_label_distrito"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <Spinner
            android:id="@+id/spinnerDistrito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/editHorarioApertura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="@string/sucursal_editar_label_apertura"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/editHorarioCierre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="@string/sucursal_editar_label_cierre"
            android:minHeight="48dp" />

        <Switch
            android:id="@+id/switchActivoSucursal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:checked="true"
            android:minHeight="48dp"
            android:text="@string/sucursal_editar_switch_activo" />

        <Button
            android:id="@+id/btnActualizarSucursal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_actualizar"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnLimpiarCampos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_limpiar"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>
