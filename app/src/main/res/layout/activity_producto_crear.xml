<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.producto.ProductoCrearActivity">

    <!-- Título principal -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/producto_crear_title"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Formulario de entrada -->
    <LinearLayout
        android:id="@+id/formLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ID Producto -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/editTextProductoId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/producto_id"
                android:inputType="number"
                android:padding="16dp"
                android:background="@android:color/transparent" />
        </androidx.cardview.widget.CardView>

        <!-- ID Categoría de Producto -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/editTextCategoriaId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/producto_categoria_id"
                android:inputType="number"
                android:padding="16dp"
                android:background="@android:color/transparent" />
        </androidx.cardview.widget.CardView>

        <!-- Nombre -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/editTextProductoNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/producto_nombre"
                android:inputType="textPersonName"
                android:padding="16dp"
                android:background="@android:color/transparent" />
        </androidx.cardview.widget.CardView>

        <!-- Descripción -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/editTextProductoDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/producto_descripcion"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:padding="16dp"
                android:background="@android:color/transparent" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Botones de acción -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/formLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Botón Guardar -->
        <Button
            android:id="@+id/buttonGuardarProducto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/producto_btn_guardar"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp" />

        <!-- Botón Limpiar -->
        <Button
            android:id="@+id/buttonLimpiarCampos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/producto_btn_limpiar"
            android:backgroundTint="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>