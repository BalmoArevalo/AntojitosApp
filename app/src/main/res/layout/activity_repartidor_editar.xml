<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/repartidor_editar_titulo"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Spinner para seleccionar repartidor -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/repartidor_editar_label_spinner"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerRepartidor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginBottom="12dp" />

        <!-- Botón Buscar -->
        <Button
            android:id="@+id/btnBuscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/repartidor_editar_btn_buscar"
            android:layout_marginBottom="16dp" />

        <!-- Nombre -->
        <EditText
            android:id="@+id/editNombreRepartidor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/repartidor_editar_hint_nombre"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <!-- Apellido -->
        <EditText
            android:id="@+id/editApellidoRepartidor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/repartidor_editar_hint_apellido"
            android:inputType="textPersonName"
            android:layout_marginTop="8dp"
            android:minHeight="48dp" />

        <!-- Teléfono -->
        <EditText
            android:id="@+id/editTelefonoRepartidor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/repartidor_editar_hint_telefono"
            android:inputType="phone"
            android:layout_marginTop="8dp"
            android:minHeight="48dp" />

        <!-- Tipo de Vehículo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/repartidor_editar_label_tipo_vehiculo"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />
        <Spinner
            android:id="@+id/spinnerTipoVehiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp" />

        <!-- Departamento -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/repartidor_editar_label_departamento"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />
        <Spinner
            android:id="@+id/spinnerDepartamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp" />

        <!-- Municipio -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/repartidor_editar_label_municipio"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />
        <Spinner
            android:id="@+id/spinnerMunicipio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:minHeight="48dp" />

        <!-- Distrito -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/repartidor_editar_label_distrito"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />
        <Spinner
            android:id="@+id/spinnerDistrito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:minHeight="48dp" />

        <!-- Switch para estado activo/inactivo -->
        <Switch
            android:id="@+id/switchActivoRepartidor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:checked="true"
            android:minHeight="48dp"
            android:text="@string/repartidor_editar_switch_activo" />

        <!-- Botones -->
        <Button
            android:id="@+id/btnActualizarRepartidor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/repartidor_editar_btn_actualizar"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnLimpiarCampos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/repartidor_editar_btn_limpiar"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>