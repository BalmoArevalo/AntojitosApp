<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextIdTipoEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID Tipo Evento"
        android:inputType="number" />

    <EditText
        android:id="@+id/editTextNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre Tipo Evento"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripción"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextMontoMinimo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Monto Mínimo"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/editTextMontoMaximo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Monto Máximo"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/buttonActualizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actualizar Tipo Evento" />
</LinearLayout>
