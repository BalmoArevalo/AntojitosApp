<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Pedido -->
        <TextView
            android:text="@string/detalle_pedido_editar_label_pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinnerPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:minHeight="48dp" />

        <!-- DetallePedido -->
        <TextView
            android:text="@string/detalle_pedido_editar_label_detalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinnerDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:minHeight="48dp" />

        <!-- Producto -->
        <TextView
            android:text="@string/detalle_pedido_editar_label_producto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinnerProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:minHeight="48dp" />

        <!-- Cantidad -->
        <TextView
            android:text="@string/detalle_pedido_editar_label_cantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editTextCantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="@string/detalle_pedido_editar_hint_cantidad"
            android:layout_marginBottom="16dp"
            android:minHeight="48dp" />

        <!-- Subtotal -->
        <TextView
            android:text="@string/detalle_pedido_editar_label_subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewSubtotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detalle_pedido_editar_monto_inicial"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- BotÃ³n actualizar -->
        <Button
            android:id="@+id/btnActualizarDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detalle_pedido_editar_btn"
            android:enabled="false" />
    </LinearLayout>
</ScrollView>
