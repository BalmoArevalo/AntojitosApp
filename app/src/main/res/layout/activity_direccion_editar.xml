<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="8dp">

        <!-- Cliente -->
        <TextView
            android:text="Cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"/>
        <Spinner
            android:id="@+id/spinnerCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Dirección -->
        <TextView
            android:text="Dirección"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textStyle="bold"/>
        <Spinner
            android:id="@+id/spinnerDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Dirección Específica -->
        <TextView
            android:text="Dirección específica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/editDireccionEspecifica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese la dirección específica"
            android:inputType="text"/>

        <!-- Descripción -->
        <TextView
            android:text="Descripción"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/editDescripcionDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese una descripción (opcional)"
            android:inputType="text"/>

        <!-- Departamento -->
        <TextView
            android:text="Departamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textStyle="bold"/>
        <Spinner
            android:id="@+id/spinnerDepartamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Municipio -->
        <TextView
            android:text="Municipio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textStyle="bold"/>
        <Spinner
            android:id="@+id/spinnerMunicipio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"/>

        <!-- Distrito -->
        <TextView
            android:text="Distrito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textStyle="bold"/>
        <Spinner
            android:id="@+id/spinnerDistrito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"/>

        <!-- Botón actualizar -->
        <Button
            android:id="@+id/btnActualizarDireccion"
            android:text="Actualizar dirección"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</ScrollView>
