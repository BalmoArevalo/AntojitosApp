<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".ui.direccion.DireccionEditarActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/direccion_editar_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/direccion_editar_label_cliente"
            android:labelFor="@+id/spinnerEditarDireccionCliente"/>
        <Spinner
            android:id="@+id/spinnerEditarDireccionCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:minHeight="48dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/direccion_editar_label_direccion"
            android:labelFor="@+id/spinnerEditarDireccionSeleccion"/>
        <Spinner
            android:id="@+id/spinnerEditarDireccionSeleccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:minHeight="48dp"
            android:enabled="false"/> <LinearLayout
        android:id="@+id/layoutEditarDireccionCampos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/direccion_editar_label_departamento"
            android:labelFor="@+id/spinnerEditarDireccionDepartamento"/>
        <Spinner
            android:id="@+id/spinnerEditarDireccionDepartamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:minHeight="48dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/direccion_editar_label_municipio"
            android:labelFor="@+id/spinnerEditarDireccionMunicipio"/>
        <Spinner
            android:id="@+id/spinnerEditarDireccionMunicipio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:minHeight="48dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/direccion_editar_label_distrito"
            android:labelFor="@+id/spinnerEditarDireccionDistrito"/>
        <Spinner
            android:id="@+id/spinnerEditarDireccionDistrito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:minHeight="48dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/direccion_editar_label_especifica"
            android:labelFor="@+id/editEditarDireccionEspecifica"/>
        <EditText
            android:id="@+id/editEditarDireccionEspecifica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/direccion_editar_hint_especifica"
            android:inputType="textPostalAddress"
            android:minHeight="48dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/direccion_editar_label_descripcion"
            android:labelFor="@+id/editEditarDireccionDescripcion"/>
        <EditText
            android:id="@+id/editEditarDireccionDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/direccion_editar_hint_descripcion"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:gravity="top|start"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/direccion_editar_label_activo"/>
        <CheckBox
            android:id="@+id/checkEditarDireccionActivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/direccion_editar_checkbox_activo"
            android:minHeight="48dp"/>

        <Button
            android:id="@+id/btnActualizarDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/direccion_editar_btn_actualizar"/>

    </LinearLayout>

    </LinearLayout>
</ScrollView>