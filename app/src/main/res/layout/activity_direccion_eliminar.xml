<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.direccion.DireccionEliminarActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/direccion_eliminar_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/direccion_eliminar_label_cliente"
        android:labelFor="@+id/spinnerEliminarDireccionCliente"/>
    <Spinner
        android:id="@+id/spinnerEliminarDireccionCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:minHeight="48dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/direccion_eliminar_label_direccion"
        android:labelFor="@+id/spinnerEliminarDireccionSeleccion"/>
    <Spinner
        android:id="@+id/spinnerEliminarDireccionSeleccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:minHeight="48dp"
        android:enabled="false"/>
    <LinearLayout
    android:id="@+id/layoutDetallesDireccionEliminar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_marginBottom="24dp"
    android:visibility="gone"
    tools:visibility="visible">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/direccion_eliminar_label_detalles"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvEliminarDirEspecifica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        tools:text="Direcci贸n: Col. Escal贸n #123"/>

    <TextView
        android:id="@+id/tvEliminarDirUbicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        tools:text="Ubicaci贸n: San Salvador, San Salvador, Centro"/>

    <TextView
        android:id="@+id/tvEliminarDirDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        tools:text="Descripci贸n: Casa esquina azul"/>

    <TextView
        android:id="@+id/tvEliminarDirEstado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        tools:text="Estado: Activa"/>

</LinearLayout>

    <Button
        android:id="@+id/btnDesactivarDireccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/direccion_eliminar_btn_desactivar"
        android:enabled="false"/>
</LinearLayout>