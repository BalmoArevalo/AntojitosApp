<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_consultar_datos_producto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Título -->
        <TextView
            android:id="@+id/text_consultar_datos_producto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consultar Datos Producto"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Spinner de Sucursales activas -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecciona una sucursal"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerSucursal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:minHeight="48dp" />

        <!-- Spinner de Productos activos -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecciona un producto"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:minHeight="48dp" />

        <!-- Botón para cargar información -->
        <Button
            android:id="@+id/btnMostrarDetalles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mostrar Detalles"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal" />

        <!-- Resultado de la consulta -->
        <TextView
            android:id="@+id/tvResultadoDatosProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#EEEEEE"
            android:padding="12dp"
            android:text="Aquí se mostrará la información de precios y stock para la sucursal y producto seleccionados."
            android:textColor="#000000"
            android:textIsSelectable="true" />

    </LinearLayout>

</ScrollView>