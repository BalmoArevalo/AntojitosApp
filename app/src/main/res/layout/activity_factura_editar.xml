<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".ui.factura.FacturaEditarActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar Factura"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccione Factura a Editar:"
            android:labelFor="@+id/spinnerSeleccionarFactura"/>
        <Spinner
            android:id="@+id/spinnerSeleccionarFactura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:minHeight="48dp"/>

        <LinearLayout
            android:id="@+id/layoutCamposEditables"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Factura (No editable):"/>
            <TextView
                android:id="@+id/tvEditarIdFactura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginBottom="12dp"
                tools:text="123"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Pedido Asociado (No editable):"/>
            <TextView
                android:id="@+id/tvEditarIdPedido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"
                tools:text="456"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de Emisión:"
                android:labelFor="@+id/editEditarFechaEmision"/>
            <EditText
                android:id="@+id/editEditarFechaEmision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Tocar para seleccionar fecha"
                android:focusable="false"
                android:clickable="true"
                android:inputType="date"
                android:minHeight="48dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monto Total ($):"
                android:labelFor="@+id/editEditarMontoTotal"/>
            <EditText
                android:id="@+id/editEditarMontoTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Ej: 25.50"
                android:inputType="numberDecimal"
                android:minHeight="48dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de Pago:"
                android:labelFor="@+id/spinnerEditarTipoPago"/>
            <Spinner
                android:id="@+id/spinnerEditarTipoPago"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:minHeight="48dp"/>

            <CheckBox
                android:id="@+id/checkEditarPagado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Marcar si ya está pagada"
                android:minHeight="48dp"/>

            <Button
                android:id="@+id/btnActualizarFactura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actualizar Factura"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>