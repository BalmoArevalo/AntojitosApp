<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eliminar Sucursal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- ID para buscar -->
        <EditText
            android:id="@+id/editIdSucursal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese ID de la Sucursal"
            android:inputType="number" />

        <Button
            android:id="@+id/btnBuscarSucursal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buscar"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Resultado cargado -->
        <EditText
            android:id="@+id/editNombreSucursal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de la Sucursal"
            android:enabled="false" />

        <!-- Botón Eliminar solo después de mostrar -->
        <Button
            android:id="@+id/btnEliminarSucursal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            android:layout_marginTop="24dp" />

        <Button
            android:id="@+id/btnLimpiarCampos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Limpiar"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>
