<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eliminar Repartidor"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Spinner de repartidores activos -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecciona un repartidor"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerRepartidor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:minHeight="48dp" />

        <!-- Botón para cargar detalles -->
        <Button
            android:id="@+id/btnBuscarRepartidor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mostrar Detalles"
            android:layout_marginBottom="16dp" />

        <!-- Resultado de la selección -->
        <TextView
            android:id="@+id/tvResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEEEEE"
            android:padding="12dp"
            android:text="Aquí se mostrará la información del repartidor a eliminar."
            android:textColor="#000000"
            android:textIsSelectable="true"
            android:layout_marginBottom="16dp" />

        <!-- Botones de acción -->
        <Button
            android:id="@+id/btnEliminarRepartidor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnLimpiarCampos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Limpiar" />

    </LinearLayout>
</ScrollView>