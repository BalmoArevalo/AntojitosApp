<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/repartidor_consultar_title"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Spinner de repartidores -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/repartidor_consultar_label_spinner"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerRepartidor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:minHeight="48dp" />

        <!-- Botón para cargar detalles -->
        <Button
            android:id="@+id/btnConsultarRepartidor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/repartidor_consultar_btn_mostrar" />

        <!-- Resultado de la consulta -->
        <TextView
            android:id="@+id/tvResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#EEEEEE"
            android:padding="12dp"
            android:text="@string/repartidor_consultar_msg_default"
            android:textColor="#000000"
            android:textIsSelectable="true" />

    </LinearLayout>
</ScrollView>
