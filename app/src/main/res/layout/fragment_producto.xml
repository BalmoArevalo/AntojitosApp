<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/producto_title"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btnCrearProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/producto_btn_crear"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnConsultarProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/producto_btn_consultar"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnEditarProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/producto_btn_editar"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnEliminarProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/producto_btn_eliminar"
        android:layout_marginBottom="16dp"/>

</LinearLayout>