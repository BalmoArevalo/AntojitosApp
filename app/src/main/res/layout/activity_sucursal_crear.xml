<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/sucursal_crear_title"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Nombre -->
        <EditText
            android:id="@+id/editNombreSucursal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/sucursal_crear_hint_nombre"
            android:minHeight="48dp" />

        <!-- Teléfono -->
        <EditText
            android:id="@+id/editTelefonoSucursal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/sucursal_crear_hint_telefono"
            android:inputType="phone"
            android:minHeight="48dp" />

        <!-- Dirección -->
        <EditText
            android:id="@+id/editDireccionSucursal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/sucursal_crear_hint_direccion"
            android:minHeight="48dp" />

        <!-- Departamento -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sucursal_crear_departamento" />
        <Spinner
            android:id="@+id/spinnerDepartamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp" />

        <!-- Municipio -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sucursal_crear_municipio" />
        <Spinner
            android:id="@+id/spinnerMunicipio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:minHeight="48dp" />

        <!-- Distrito -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sucursal_crear_distrito" />
        <Spinner
            android:id="@+id/spinnerDistrito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:minHeight="48dp" />

        <!-- Horario apertura -->
        <EditText
            android:id="@+id/editHorarioApertura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            android:hint="@string/sucursal_crear_hint_apertura"
            android:minHeight="48dp" />

        <!-- Horario cierre -->
        <EditText
            android:id="@+id/editHorarioCierre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            android:hint="@string/sucursal_crear_hint_cierre"
            android:minHeight="48dp" />

        <!-- Botones -->
        <Button
            android:id="@+id/btnGuardarSucursal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sucursal_crear_btn_guardar"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnLimpiarCampos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sucursal_crear_btn_limpiar"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
