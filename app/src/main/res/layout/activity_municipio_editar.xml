<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Spinner para seleccionar ID del Municipio -->
        <Spinner
            android:id="@+id/spinnerIdMunicipio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:minHeight="48dp" />

        <!-- Botón Buscar -->
        <Button
            android:id="@+id/buttonBuscarMunicipio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscar"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Nombre del Municipio -->
        <EditText
            android:id="@+id/editTextNombreMunicipioEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del Municipio"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <!-- ID del Departamento -->
        <!-- Spinner para seleccionar Departamento -->
        <Spinner
            android:id="@+id/spinnerDepartamentoEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:minHeight="48dp" />


        <!-- Switch para estado activo -->
        <Switch
            android:id="@+id/switchActivoMunicipio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:checked="true"
            android:minHeight="48dp"
            android:text="¿Activo?" />


        <!-- Botón Actualizar -->
        <Button
            android:id="@+id/buttonActualizarMunicipio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actualizar"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>
