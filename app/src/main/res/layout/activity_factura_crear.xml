<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.factura.FacturaCrearActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/factura_crear_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/factura_crear_label_pedido"
        android:labelFor="@+id/spinnerPedidoFactura"/>
    <Spinner
        android:id="@+id/spinnerPedidoFactura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:minHeight="48dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/factura_crear_label_monto_calculado"/>
    <TextView
        android:id="@+id/tvCalculadoMontoTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:text="@string/factura_crear_monto_placeholder" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/factura_crear_label_fecha"
        android:labelFor="@+id/editFechaEmisionFactura"/>
    <EditText
        android:id="@+id/editFechaEmisionFactura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="@string/factura_crear_hint_fecha"
        android:focusable="false"
        android:clickable="true"
        android:inputType="date"
        android:minHeight="48dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/factura_crear_label_tipo_pago"
        android:labelFor="@+id/spinnerTipoPagoFactura"/>
    <Spinner
        android:id="@+id/spinnerTipoPagoFactura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:minHeight="48dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/factura_crear_label_estado_inicial"/>
    <TextView
        android:id="@+id/tvEstadoFacturaInicial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"
        android:text="@string/factura_crear_estado_default" />

    <Button
        android:id="@+id/btnGuardarFactura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/factura_crear_btn_guardar"
        android:enabled="false"/>
</LinearLayout>