<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cliente.ClienteConsultarActivity">

    <!-- Título principal -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cliente_consultar_title"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Campo para ingresar ID del cliente -->
    <EditText
        android:id="@+id/editTextClienteId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/cliente_hint_id"
        android:inputType="number"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/darker_gray"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón de buscar -->
    <Button
        android:id="@+id/buttonBuscarCliente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/cliente_btn_buscar"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/editTextClienteId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Contenedor de información del cliente -->
    <LinearLayout
        android:id="@+id/layoutClienteInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/buttonBuscarCliente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ID del cliente -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/textViewClienteId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cliente_id"
                android:textSize="16sp"
                android:padding="16dp"
                android:textColor="@android:color/black" />
        </androidx.cardview.widget.CardView>

        <!-- ID del usuario -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/textViewUsuarioId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cliente_usuario_id"
                android:textSize="16sp"
                android:padding="16dp"
                android:textColor="@android:color/black" />
        </androidx.cardview.widget.CardView>

        <!-- Nombres -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/textViewClienteNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cliente_nombre"
                android:textSize="16sp"
                android:padding="16dp"
                android:textColor="@android:color/black" />
        </androidx.cardview.widget.CardView>

        <!-- Apellidos -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/textViewClienteApellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cliente_apellido"
                android:textSize="16sp"
                android:padding="16dp"
                android:textColor="@android:color/black" />
        </androidx.cardview.widget.CardView>

        <!-- Teléfono -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/textViewClienteTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cliente_telefono"
                android:textSize="16sp"
                android:padding="16dp"
                android:textColor="@android:color/black" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>