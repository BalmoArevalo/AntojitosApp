<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consultar Sucursal"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Spinner de sucursales -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecciona una sucursal"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spinnerSucursal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:minHeight="48dp" />

        <!-- Botón para cargar información -->
        <Button
            android:id="@+id/btnConsultarSucursal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mostrar Detalles" />

        <!-- Resultado -->
        <TextView
            android:id="@+id/tvResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#EEEEEE"
            android:padding="12dp"
            android:text="Aquí se mostrará la información de la sucursal seleccionada."
            android:textColor="#000000"
            android:textIsSelectable="true" />
    </LinearLayout>
</ScrollView>
